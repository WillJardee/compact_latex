\mode<presentation>

\setbeamercolor*{lineup}{parent=palette primary}
\setbeamercolor*{linemid}{parent=palette secondary}
\setbeamercolor*{linebottom}{parent=palette tertiary}

% Footer
\defbeamertemplate*{footline}{MSU}
{
  \leavevmode%
  \ifnum\c@framenumber=1%
	  % skip title slide
  \else   
	  % Yellow line
	  \hbox{%
	  \begin{beamercolorbox}[wd=1.0\paperwidth,ht=0.5ex,dp=0pt]{palette secondary}%
	  \end{beamercolorbox}%	  
	  } %   
	  
	  % Bottom line
	  \hbox{%
	  \begin{beamercolorbox}[wd=.4\paperwidth,ht=3ex,left,leftskip=2ex]{title in head/foot}%
	    	\vbox to2.4ex{\vfil\hbox{\usebeamerfont{title in head/foot}\insertshorttitle{}}\vfil}%
	  \end{beamercolorbox}%
	  \begin{beamercolorbox}[wd=.2\paperwidth,ht=3ex,left,leftskip=2ex]{title in head/foot}%
	    	\vbox to2.4ex{\vfil\hbox{\usebeamerfont{title in head/foot}\insertshortauthor{}}\vfil}%
	  \end{beamercolorbox}%	  
	  \begin{beamercolorbox}[wd=.3\paperwidth,ht=3ex,center]{date in head/foot}%
		  \vbox to2.5ex{\vfil\hbox{\usebeamerfont{date in head/foot}\insertshortdate{}}\vfil}%
	  \end{beamercolorbox}%

	\begin{beamercolorbox}[wd=.1\paperwidth,ht=3ex,right,rightskip=3.5ex]{date in head/foot}%
		\vbox to2.5ex{\vfil\hbox{\insertframenumber{} / \inserttotalframenumber}\vfil}%
	\end{beamercolorbox}

	}
  \fi  
}

\mode
<all>