}{
  \end{leftbar}}

\newenvironment{important}[2][$\langle$No Reference$\rangle$]{
  \colorlet{shadecolor}{orange!15}
  \begin{shaded}
    \textbf{#2} - #1

\noindent
}{\end{shaded}}

