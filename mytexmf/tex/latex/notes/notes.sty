% Formatting the paper and links
\usepackage[margin=1in]{geometry}
\usepackage[colorlinks=true, allcolors=gray]{hyperref}  % I don't like cyan links in notes

% Macros for telling what to go back to
\usepackage[dvipsnames]{xcolor}
% \newcommand{\TODO}[1]{\textcolor{red}{\\\noindent\textbf{TODO:} #1}}
\newcommand{\Note}[1]{\textcolor{blue}{\\\noindent\textbf{Note:} #1}}
\newcommand{\Question}[1]{\textcolor{magenta}{\\\noindent\textbf{Question:} #1}}
\newcommand{\Investigate}[1]{\textcolor{violet}{\\\noindent\textbf{Investigate:} #1}}

% Allow for redefining sections for when classes go over book`s out of order
\newcommand{\mysection}[2]{\setcounter{section}{#1}\addtocounter{section}{-1}\section{#2}}
\newcommand{\mysubsection}[2]{\setcounter{subsection}{#1}\addtocounter{subsection}{-1}\subsection{#2}}
\newcommand{\mysubsubsection}[2]{\setcounter{subsubsection}{#1}\addtocounter{subsubsection}{-1}\subsubsection{#2}}
\newcommand{\mypart}[2]{\setcounter{part}{#1}\addtocounter{part}{-1}\part{#2}}


% Define Commonly used Operators
\usepackage{amsmath}
\DeclareMathOperator*{\prob}{\mathbb{P}}
\DeclareMathOperator*{\expect}{\mathbb{E}}
\DeclareMathOperator*{\var}{Var}
\DeclareMathOperator*{\cov}{Cov}
\DeclareMathOperator*{\corr}{Corr}
\DeclareMathOperator*{\argmax}{argmax}
\DeclareMathOperator*{\argmin}{argmin}

% Provide block formats for definitions/important things
% TODO: Add a figure-esk way of tracking nubmers
\usepackage{framed}


% Empty white spaces need to enforce new line
\newenvironment{definition}[2][$\langle$No Reference$\rangle$]{
  \begin{leftbar}
    \textbf{#2} - #1

